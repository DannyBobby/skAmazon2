@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=1000, initial-scale=1.0, maximum-scale=1.0">
    <!-- Loading Bootstrap -->
    <link href="~/Content/flat-ui/dist/css/vendor/bootstrap.min.css" rel="stylesheet">
    <!-- Loading Flat UI -->
    <link href="~/Content/flat-ui/dist/css/flat-ui.css" rel="stylesheet" />
    <!-- Custom Stylesheet -->
    <link href="~/Content/Style.css" rel="stylesheet" />
    <!-- Font Awesome (glyphicons) -->
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/flat-ui/img/favicon.ico">
    <!-- jQuery -->
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
        <script src="~/Content/flat-ui/dist/js/vendor/html5shiv.js"></script>
        <script src="~/Content/flat-ui/dist/js/vendor/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <nav class="navbar navbar-static-top navbar-inverse" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
                <span class="sr-only">Toggle navigation</span>
            </button>
            <a href="@Url.Action("Home", "Home")" class="navbar-brand">Sell Stuff To <small>.me</small></a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse-01">
            @Html.Partial("_UserNavigation")
            <form class="navbar-form hidden-xs" action="/Product/Search" role="search">
                @Html.Partial("_SearchBar")
            </form>
</div><!-- collapse -->
        <form class="navbar-form hidden-sm hidden-md hidden-lg" action="/Product/Search" role="search">
            @Html.Partial("_SearchBar")
        </form>
</nav><!-- /navbar -->

    <div class="container-fluid">
        @Html.Partial("_Spacer")
        @RenderBody()
        @Html.Partial("_Spacer")
    </div>
    @Html.Partial("_Footer")

    @*<script src="~/Content/flat-ui/dist/js/vendor/jquery.min.js"></script>*@
    <script src="~/Content/flat-ui/dist/js/vendor/video.js"></script>
    <script src="~/Content/flat-ui/dist/js/flat-ui.min.js"></script>
    <script src="~/Content/flat-ui/docs/assets/js/application.js"></script>
    <script>
        videojs.options.flash.swf = "~/Content/dist/js/vendors/video-js.swf"
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
