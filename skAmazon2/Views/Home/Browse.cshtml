    @*Using Flat UI's tiles here:*@
@*col-md-9 col-md-push-3 col-lg-10 col-lg-push-2*@
    <div class="row">
        <div class="main-content col-md-12">
            @Html.Partial("_MainContentTopBar")
            <div class="browse-item-wrapper row">
                <div class="row">
                    @* Populates a browse page with all the items matching the search*@
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
                                <div class="tile">
                                    <img src="../../Content/icon_Widget2.jpg" alt="widget" class="">
                                    <h3 class="tile-title">@Html.DisplayFor(modelItem => item.ProductDescription)</h3>
                                    <p>Price: @Html.DisplayFor(modelItem => item.UnitPrice)</p>
                                    <a href=@Url.Action("Details", "Product", new { id = item.ItemID }) class="btn btn-primary btn-large btn-block">View Item</a>
                                    <a href=@Url.Action("AddToCart", "ShoppingCart", new { id = item.ItemID }, "") class="btn btn-primary btn-large btn-block">Add to Cart</a>                                    
                                </div>
                            </div>
                        }
                    }


                </div> <!-- /row -->
            </div>
        </div>

