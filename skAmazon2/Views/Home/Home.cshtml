@model IEnumerable<skAmazon2.Models.Product>

@{
    ViewBag.Title = "skAmazon.com";
    ViewBag.LoggedIn = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        (function () {
            $(".item").addClass("items-lg");
        })();
    })
</script>
