@model skAmazon2.Models.CheckOutViewModel

@{
    ViewBag.Title = "Super-Fast Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>

@* ability to select shipping address, payment method, and shipping method all from "quick" dropdown menus
    "quick" ability to add new shipping address and payment method
    Promo codes are entered right before final order submit*@
@using (Html.BeginForm())
{
    <h2>Super-Fast Checkout!</h2>
    <h3>Ready to checkout @Model.User.FirstName @Model.User.LastName?</h3>
   <fieldset>       
       <legend>Shipping Destination</legend>      
       <p>Please select your shipping destination:</p>        
       
        @Html.DropDownList("Select Destination", new SelectList(Model.ShippingAddresses, "AddressID", "AddrLine1")) 
       
       <div>
           <a type="button" class="btn btn-success" style="margin-top: .5em" href=#>
               Add New Shipping Address >>
           </a>
       </div>

    </fieldset>
    <br />
    <fieldset>
        <legend>Payment Method</legend>
        <p>Please select your payment method:</p>
        
        @Html.DropDownList("Select Payment Method", new SelectList(Model.PaymentMethods, "PaymentMethodID", "PaymentDescription"))        
             
        <div>
            <a type="button" class="btn btn-success" style="margin-top: .5em" href=#>
                Add New Payment Method >>
            </a>
        </div>

        <br />
    </fieldset>
    <fieldset>
        <legend>Shipping Method</legend>
        <p>Please select your shipping method:</p>
        
        @Html.DropDownList("Select Shipping Method", new SelectList(Model.ShippingOptions, "ShippingOptionId", "Description"))

        
        <br />
    </fieldset>
    
    <fieldset>
        <legend>Promotion Code</legend>        
        <div class="editor-label">
            @Html.Label("Enter Code:")
        </div>
        <div class="editor-field">
            @Html.TextBox("PromoCode")
        </div>
    </fieldset>
    
    <input type="submit" value="Submit Order" />
}
<br />
<div>
    @Html.ActionLink("Back to Cart", "Index", "ShoppingCart")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
